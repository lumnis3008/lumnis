  <<script>
    // Menu mobile toggle + fechar ao clicar
    const btnMenu = document.getElementById('btnMenu');
    const mobileNav = document.getElementById('mobileNav');
    const navLinks = document.querySelectorAll('#mobileNav .nav-link, header .nav-link');
  
    btnMenu?.addEventListener('click', () => {
      const isHidden = mobileNav.classList.toggle('hidden');
      btnMenu.setAttribute('aria-expanded', String(!isHidden));
    });
  
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (!mobileNav.classList.contains('hidden')) {
          mobileNav.classList.add('hidden');
          btnMenu.setAttribute('aria-expanded', 'false');
        }
      });
    });
  
    // Destaque do link ativo durante o scroll
    const sections = Array.from(document.querySelectorAll('section[id]'));
    const headerLinks = Array.from(document.querySelectorAll('header .nav-link'));
  
    function setActiveLink() {
      const scrollPos = window.scrollY + 120; // offset para o header
      let currentId = sections[0]?.id;
      for (const sec of sections) if (scrollPos >= sec.offsetTop) currentId = sec.id;
      headerLinks.forEach(a => {
        if (a.getAttribute('href') === '#' + currentId) {
          a.classList.add('text-purple-400');
          a.setAttribute('aria-current', 'page');
        } else {
          a.classList.remove('text-purple-400');
          a.removeAttribute('aria-current');
        }
      });
    }
    window.addEventListener('scroll', setActiveLink, { passive: true });
    window.addEventListener('load', setActiveLink);
  
    // Envio via Formspree + validação de e-mail + mensagem de sucesso
    const contatoForm = document.getElementById('contatoForm');
    const contatoSuccess = document.getElementById('contatoSuccess');
    const emailInput = document.getElementById('email');
    const emailError = document.getElementById('emailError');
  
    contatoForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
  
      if (!emailInput.checkValidity()) {
        emailError?.classList.remove('hidden');
        emailInput.focus();
        return;
      } else {
        emailError?.classList.add('hidden');
      }
  
      const fd = new FormData(contatoForm);
  
      try {
        const res = await fetch(contatoForm.action, {
          method: 'POST',
          body: fd,
          headers: { 'Accept': 'application/json' }
        });
  
        if (res.ok) {
          contatoSuccess?.classList.remove('hidden');
          contatoForm.reset();
        } else {
          let msg = 'Não foi possível enviar agora. Tente novamente mais tarde.';
          try {
            const data = await res.json();
            if (data?.errors?.length) msg = data.errors.map(e => e.message).join('\n');
          } catch (_) {}
          alert(msg);
        }
      } catch {
        alert('Falha de conexão. Verifique sua internet e tente novamente.');
      }
    });
  </script>
